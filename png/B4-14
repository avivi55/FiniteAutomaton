digraph finite_state_machine { rankdir=LR
	node [shape=doublecircle]
	1

	node [shape=circle]
	fake0 [style=invisible]
	fake0 -> 0

	0 -> 0 [label="a"] 
	0 -> 2 [label="b"] 
	0 -> 3 [label="c"] 
	0 -> 1 [label="d"] 
	2 -> 2 [label="b"] 
	2 -> 3 [label="c"] 
	2 -> 1 [label="d"] 
	3 -> 3 [label="c"] 
	3 -> 1 [label="d"] 
	1 -> 1 [label="d"] 
}
