digraph finite_state_machine { rankdir=LR
	node [shape=doublecircle]
	0
	1
	2
	3
	4

	node [shape=circle]
	fake0 [style=invisible]
	fake0 -> 0

	0 -> 1 [label="a"] 
	0 -> 3 [label="b"] 
	3 -> 0 [label="b"] 
	3 -> 1 [label="a"] 
	1 -> 2 [label="a"] 
	1 -> 4 [label="b"] 
	2 -> 0 [label="b"] 
	4 -> 1 [label="a"] 
}
